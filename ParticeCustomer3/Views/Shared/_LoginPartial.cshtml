@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @if (User.Identity.GetUserName() != "admin")
                {
                    @Html.ActionLink("編輯個人資料 " + User.Identity.GetUserName() + "!", "EditProfile", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })
                }
                else
                {
                    @Html.Label("編輯個人資料 " + User.Identity.GetUserName() + "!")
                }
            </li>
            <li>@Html.ActionLink("Sign Out", "Logout", "Account")</li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        @*<li>@Html.ActionLink("註冊", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>*@
        <li>@Html.ActionLink("登入", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
