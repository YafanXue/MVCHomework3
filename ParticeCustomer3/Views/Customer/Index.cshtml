
@model  ParticeCustomer3.Models.CustSearchViewModel
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2> 

<p>
    @Html.ActionLink("[Create New]", "Create")    @Html.ActionLink("[Export to Excel]", "ExcelExport")

    @using (Html.BeginForm("Index", "Customer", FormMethod.Get))
    {
        <table>
            <tr>
                <td>
                    @Html.Label("客戶名稱") @Html.Label(":")
                </td>
                <td colspan="2">
                    <input type="text" name="Keyword" />
                </td>
            </tr>
            <tr>
                <td>
                    @Html.Label("客戶分類:")
                </td>
                <td>
                    @Html.DropDownList("客戶分類", (IEnumerable<SelectListItem>)ViewBag.CusType,"", htmlAttributes: new { @class = "form-control" })
                </td>
                <td>
                    <input type="submit" value="Search">
                </td>
            </tr>
        </table>
    }
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.客戶名稱)*@
            @Html.ActionLink("客戶名稱", "Index", new { sortcolumn = ViewBag.NameSortParm, nameFilter = ViewBag.nameFilter, custypeFilter = ViewBag.custypeFilter })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.統一編號)*@
            @Html.ActionLink("統一編號", "Index", new { sortcolumn = ViewBag.SerialSortParm, nameFilter = ViewBag.nameFilter, custypeFilter = ViewBag.custypeFilter })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.電話)*@
            @Html.ActionLink("電話", "Index", new { sortcolumn = ViewBag.TELSortParm, nameFilter = ViewBag.nameFilter, custypeFilter = ViewBag.custypeFilter })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.傳真)*@
            @Html.ActionLink("傳真", "Index", new { sortcolumn = ViewBag.FAXSortParm, nameFilter = ViewBag.nameFilter, custypeFilter = ViewBag.custypeFilter })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.地址)*@
            @Html.ActionLink("地址", "Index", new { sortcolumn = ViewBag.AddressSortParm, nameFilter = ViewBag.nameFilter, custypeFilter = ViewBag.custypeFilter })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Email)*@
            @Html.ActionLink("Email", "Index", new { sortcolumn = ViewBag.EmailSortParm, nameFilter = ViewBag.nameFilter, custypeFilter = ViewBag.custypeFilter })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.客戶分類)*@
            @Html.ActionLink("客戶分類", "Index", new { sortcolumn = ViewBag.CusTypeSortParm, nameFilter = ViewBag.nameFilter, custypeFilter = ViewBag.custypeFilter })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.SearchDetails) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.客戶名稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.統一編號)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.電話)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.傳真)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.地址)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.客戶分類資訊.分類名稱)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
<br />
   Page @(Model.SearchDetails.PageCount < Model.SearchDetails.PageNumber ? 0 : Model.SearchDetails.PageNumber) of @Model.SearchDetails.PageCount

@Html.PagedListPager(Model.SearchDetails, page => Url.Action("Index",
    new { page, sortcolumn = ViewBag.CurrentSort, nameFilter = ViewBag.nameFilter, custypeFilter = ViewBag.custypeFilter }))
