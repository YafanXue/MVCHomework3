@model ParticeCustomer3.Models.CusContactViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
@Html.Partial("CustomerDtl",Model)

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Customer.Id }) |
        @Html.ActionLink("Back to List", "Index")

        @if (Model.Contacts.ToArray().Length > 0)
        {
            <input type="submit" value="批次更新資料" />
        }
        else {
            <input type="submit" value="批次更新資料" disabled="disabled" style="background-color:darkgray" />
        }
    </p>
    @Html.Partial("Contacts", Model.Contacts)

}
@section breadcrumb{
    <li><a href="@Url.Action("Index","Customer")">客戶資料管理</a></li>
}