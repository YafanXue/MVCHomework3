@model PagedList.IPagedList<ParticeCustomer3.Models.客戶聯絡人>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
    @using (Html.BeginForm("Index", "Contact", FormMethod.Get))
    {
        @Html.Label("職稱:") @Html.DropDownList("Title", (IEnumerable<SelectListItem>)ViewBag.TitleList, "", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search">
    }

<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.職稱)*@ 
            @Html.ActionLink("職稱", "Index", new { sortcolumn = ViewBag.TitleSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.姓名)*@
            @Html.ActionLink("姓名", "Index", new { sortcolumn = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Email)*@
            @Html.ActionLink("Email", "Index", new { sortcolumn = ViewBag.EmailSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.手機)*@
            @Html.ActionLink("手機", "Index", new { sortcolumn = ViewBag.MobileSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.電話)*@
            @Html.ActionLink("電話", "Index", new { sortcolumn = ViewBag.TELSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
     
        <th>
            @*@Html.DisplayNameFor(model => model.客戶資料.客戶名稱)*@
            @Html.ActionLink("客戶名稱", "Index", new { sortcolumn = ViewBag.CusName, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.職稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.姓名)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.手機)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.電話)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
<br />
   Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortcolumn = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
    